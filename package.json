{
  "name": "github-solutions-aln",
  "version": "1.0.0",
  "description": "ALN (Advanced Language Notation) GitHub Actions CI/CD integration",
  "private": true,
  "main": "dist/github-rate-governor.js",
  "types": "dist/github-rate-governor.d.ts",
  "scripts": {
    "aln:convert": "node scripts/aln-to-json-projection.cjs",
    "aln:validate": "node scripts/aln-ajv-mesh-sweep.cjs",
    "aln:severity-gate": "node scripts/aln-severity-gate.cjs",
    "aln:metatest": "node scripts/aln-copilot-metatest.cjs",
    "aln:ci": "npm run aln:convert && npm run aln:validate && npm run aln:severity-gate",
    "fix:godot-lsp": "node scripts/fix-godot-lsp.cjs --apply",
    "fix:godot-lsp:ci": "node scripts/fix-godot-lsp.cjs --ci-fail",
    "rate-governor:test": "node scripts/test-github-rate-governor.cjs",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint 'src/**/*.{ts,tsx}' '__tests__/**/*.{ts,tsx,js,cjs}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' '__tests__/**/*.{ts,tsx,js,cjs}' --fix",
    "test": "bash -lc '.aln/run-tests.sh || pwsh -ExecutionPolicy Bypass -File .aln/run-tests.ps1'",
    "test:node": "npm run build && jest"
  },
  "keywords": [
    "aln",
    "github-actions",
    "copilot",
    "governance",
    "ci-cd"
  ],
  "author": "Doctor0Evil",
  "license": "UNLICENSED",
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "glob": "^10.3.10",
    "jest": "^29.0.0",
    "nock": "^13.3.0",
    "fast-check": "^4.21.0",
    "vscode-languageserver-types": "^3.19.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.48.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "eslint-config-prettier": "^9.3.0"
  }
  ,
  "prepare": "npm run build"
}


